{% extends 'base.html.twig' %}

{% block title %}Tableau de bord
{% endblock %}

{% block body %}

	<h1>Mes Favoris
	</h1>


	<div class="card">
		<div class="card-header">
			Mes informations personnelles
		</div>
		<div class="card-body">
			<blockquote class="blockquote mb-0">
				<p></p>
				<footer class="blockquote-footer">{{idP.prenom}}
				</footer>
			</blockquote>
		</div>
	</div>
	<div class="row row-cols-1 row-cols-md-3 g-4" style="margin-top :2%">


		{% for fav in favs %}

			<div class="col">

				<div class="card" style="width: 35rem;">
					<img src="{{fav.idHackatFav.image}}" class="card-img-top">
					<div class="card-body">
						<h3 class="card-title">{{fav.idHackatFav.theme}}</h3>
						<h4 class="card-text">{{fav.idHackatFav.lieu}}
							{{fav.idHackatFav.rue}}
						</h4>
						<h4 class="card-text">{{fav.idHackatFav.codePostal}}
							{{fav.idHackatFav.ville}}</h4>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
