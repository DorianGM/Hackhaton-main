{% extends 'base.html.twig' %}

{% block title %}Hello HackathonController!{% endblock %}

{% block body %}
<h1 style="text-align:center"><b>{{hackathon.theme}}</b></h1></br>
<img style="width:25%;length:25%;text-align:center;display: block;margin-left: auto;margin-right: auto;" src="{{hackathon.image}}"></br>
<div class="details" style ="text-align:center;display: block;margin-left: auto;margin-right: auto;border: 1px solid black;padding-bottom:10px;padding-top:10px;">
    <h1>Détails du hackathon : </h1>
    </br>
      Adresse : {{hackathon.lieu}} ({{hackathon.rue}}, {{hackathon.codePostal}} {{hackathon.ville}})</br>
      Commence le : {{hackathon.dateDebut|date("d/m/Y")}} à {{hackathon.heureDebut|date("H:i")}}</br>
      Se termine le : {{hackathon.dateFin|date("d/m/Y")}} à {{hackathon.heureFin|date("H:i")}}</br>
      <b> S'inscrire avant le {{hackathon.dateLimite|date("d/m/Y")}} </b></br>
      Nombre de places : 
      {% if hackathon.nbPlaces <= 10 and hackathon.nbPlaces > 0%}
						<b style="color:red">{{hackathon.nbPlaces}}</b>
					{% endif %}
          {% if hackathon.nbPlaces == 0 %}
						<b style="color:red">Plus de places disponibles</b>
					{% endif %}
          {% if hackathon.nbPlaces > 10 %}
						<b>{{hackathon.nbPlaces}}</b>
					{% endif %} </br>
</div>


{% endblock %}
